<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Online Store</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item <%= path === '/'? 'active':'' %>">
          <a class="nav-link" href="/">Shop</a>
        </li>
        <li class="nav-item <%= path === '/products'? 'active':'' %>">
          <a class="nav-link" href="/products">Products</a>
        </li>
        <% if(isAuthenticated){ %> 
        <li class="nav-item <%= path === '/cart'? 'active':'' %>">
          <a class="nav-link" href="/cart">Cart</a>
        </li>
        <li class="nav-item <%= path === '/orders'? 'active':'' %>">
          <a class="nav-link" href="/orders">Order</a>
        </li>
        <li class="nav-item <%= path === '/admin/add-product'? 'active':'' %>">
              <a class="nav-link" href="/admin/add-product">Add Product</span></a>
            </li>
            <li class="nav-item <%= path === '/admin/products'? 'active':'' %>">
              <a class="nav-link" href="/admin/products">Admin Products</span></a>
            </li>
          <% } %> 
      </ul>
      <ul class="navbar-nav ml-auto">
        <% if(!isAuthenticated){ %>
        <li class="nav-item <%= path === '/login' ? 'active':'' %>">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <li class="nav-item <%= path === '/register' ? 'active':'' %>">
          <a class="nav-link" href="/register">Sign Up</a>
        </li>
      <% }else{ %> 
        <form action="/logout" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken%>">
          <button class="btn">Logout</button>
        </form>
      <% } %> 
      </ul>
    </div>
  </nav>
</header>
