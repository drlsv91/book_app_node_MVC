<%- include('../includes/head.ejs') %> 
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %> 
    <main class="container mt-5">
        <form action="/login" method="POST">
            <div class="form-group">
              <% if(errorMessage){  %> 
              <div id="error" class="alert alert-danger"><%= errorMessage%></div>
              <% } %> 
              <label for="email">Email</label>
              <input 
              type="email" 
              name="email" 
              class="form-control <%= validationErrors.find(e=>e.param === 'email') ? 'is-invalid' : '' %>" 
              id="email" 
              placeholder="Email"
              value="<%= oldInput.email ? oldInput.email : '' %>"
              >
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input 
              type="password" 
              name="password" 
              class="form-control <%= validationErrors.find(e=>e.param === 'password') ? 'is-invalid' : '' %> " 
              id="password" 
              placeholder="Password"
              value="<%= oldInput.password ? oldInput.password : '' %>"
              >
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken%>">
            <button type="submit" class="btn btn-primary">Login</button>
            <div class="text-right">

              <a href="/reset" class="btn btn-sm btn-default text-primary">Reset Password</a>
            </div>
          </form>
    </main>
<%- include('../includes/end.ejs') %> 